<div class="block full">
  <div class="block-title">
    <h2><strong><%= t ".add_member" %></strong></h2>
  </div>
    <%= form_tag employers_members_path, method: "get",
      id: "verified_search", class: "form-inline" do %>
      <%= text_field_tag :search, "", class: "form-control" %>
      <%= hidden_field_tag :checked_values, @member_checkeds %>
      <%= submit_tag t(".search"), name: :nil, remote: true, class: "btn btn-primary" %>
    <% end %>

  <%= form_tag employers_members_path, class: "add-member" do %>
    <div class="results">
      <%= render "users" %>
    </div>
    <%= hidden_field_tag :company_id, @company.id %>
    <%= submit_tag t(".add_member"), class: "btn btn-primary" %>
  <% end %>
</div>
<div class="block full">
  <div class="block-title">
    <h2><strong><%= t ".all_member" %></strong></h2>
  </div>
  <div class="scrollbar block full tbl-user-member" id="style-2">
    <table class="table table-striped table-vcenter">
      <thead class="header-scroll">
        <tr>
          <th class="text-center"><%= t ".stt" %></th>
          <th class="text-center"><%= t ".avatar" %></th>
          <th class="text-center"><%= t ".name" %></th>
          <th class="text-center"><%= t ".position" %></th>
          <th class="text-center"><%= t ".email" %></th>
          <th class="text-center"><%= t ".sex" %></th>
          <th class="text-center"><%= t ".role" %></th>
          <th class="text-center"><%= t ".start_time" %></th>
          <th class="text-center"><%= t ".end_time" %></th>
          <th class="text-center"><%= t ".status" %></th>
          <th class="text-center"><%= t ".action" %></th>
        </tr>
      </thead>
      <tbody id="members">
        <%= render @members %>
      </tbody>
    </table>
  </div>

  <div class="modal fade" id="memberEdit">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title"><%= t ".edit_member" %></h4>
        </div>
        <div class="modal-body" id="form_edit_member">
          <%= render "form" %>
        </div>
      </div>
    </div>
  </div>
  <%= paginate @members %>
</div>
