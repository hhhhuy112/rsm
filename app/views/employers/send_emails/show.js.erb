<% if @oauth.blank?  %>
  swal({
    title: I18n.t('jobs.apply.confirm_change_status'),
    text: I18n.t('oauth.google.disconnect_gmail'),
    icon: 'warning',
    buttons: true,
    primaryMode: true,
  })
  .then(function(isConfirm){
    if (isConfirm) {
      $('.loading').fadeIn('slow');
      window.location.href = '/devises/auth/google_oauth2?apply_id=' +
        <%= @email_sent.apply_status.apply_id %> + '&job_id=' +
        <%= @email_sent.apply_status.job_id %>;
    }
  });
<% elsif @email_sent.blank? %>
  alertify.warning('<%= t "employers.email_sents.email_sent.fail" %>');
<% else %>
  $('#area-hisory-apply-load').html('<%= j render partial: "employers/apply_statuses/apply_status", collection: @apply_activities, as: :activity %>');
  $('#pagination-history-apply').html('<%= j paginate @apply_activities %>');
<% end %>
$('.loading').fadeOut('slow');
