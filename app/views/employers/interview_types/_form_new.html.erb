<div id="<%= id %>">
  <%= simple_form_for [:employers, @interview_type], remote: true do |f| %>
    <%= hidden_field_tag "div_id", id %>
    <div class="col-md-6">
      <div class="block">
        <div class="block-title">
          <div class="block-options pull-right">
            <%= f.submit t(".save"), class: "btn btn-alt btn-sm btn-default" %>
            <%= link_to_add_association "", f, :skill_sets, partial: "skill_fields",
              "data-association-insertion-node": ".skill-#{id}",
              "data-association-insertion-method": "prepend",
               class: "btn btn-alt btn-sm btn-default fa fa-plus", title: t(".add_skill") %>
            <%= link_to "javascript:void(0)", title: t(".delete"), class: "btn btn-alt btn-sm btn-default remove" do %>
              <i class="fa fa-times"></i>
            <% end %>
          </div>
          <div>
            <%= f.hidden_field :company_id, value: @company.id %>
            <%= f.text_field :name, class: "form-in", autofocus: true,
              placeholder: t(".enter_name"), required: true %>
          </div>
        </div>

        <div class="block-content scroll-skill">
          <ul class="fa-ul list-li-push skill-<%= id %>">
            <%= render partial: "skill", collection: @company.skills, as: :skill %>
          </ul>
        </div>
        <div class="form-group row"></div>
      </div>
    </div>
  <% end %>
</div>
