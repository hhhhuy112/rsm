<%= simple_form_for [:employers, @candidate],
  url: url_content,
  html: {id: "cadidate-form-edit"}, remote: true, method: method_name do |f| %>

  <div class="row">
    <% if url_path.present? %>
      <%= hidden_field_tag :url, url_path %>
    <% end %>
    <% if !f.object.new_record? %>
    <div class="form-group form-custom input-inline width-inline">
      <div class="col-xs-12">
        <div class="input-group">
          <span class="input-group-addon apply-un input-name">
            <i class="fa fa-key" aria-hidden="true"></i>
          </span>
          <%= f.text_field :code, disabled: true,
            class: "form-control input-custom input-lg input-name" %>
        </div>
        <span class="error-message-name"></span>
      </div>
      <div class="clearfix"></div>
    </div>
    <% end %>

    <div class="form-group form-custom input-inline width-inline">
      <div class="col-xs-12">
        <div class="input-group">
          <span class="input-group-addon apply-un input-name">
            <i class="fa fa-address-book" aria-hidden="true"></i>
          </span>
          <%= f.text_field :name, autofocus: true, placeholder: t(".name"),
            class: "form-control input-custom input-lg input-name" %>
        </div>
        <span class="error-message-name"></span>
      </div>
      <div class="clearfix"></div>
    </div>

    <div class="form-group form-custom input-inline width-inline">
      <div class="col-xs-12">
        <div class="input-group">
          <span class="input-group-addon apply-un input-email"><i class="fa fa-envelope" aria-hidden="true"></i></span>
          <%= f.text_field :email, autofocus: true, placeholder: t(".email"),
            class: "form-control input-custom input-lg input-email" %>
        </div>
        <span class="error-message-email"></span>
      </div>
      <div class="clearfix"></div>
    </div>

    <div class="form-group form-custom input-inline width-inline">
      <div class="col-xs-12">
        <div class="input-group">
          <span class="input-group-addon apply-un input-phone"><i class="fa fa-phone" aria-hidden="true"></i></span>
          <%= f.text_field :phone, autofocus: true, placeholder: t(".phone"),
            class: "form-control input-custom input-lg input-phone" %>
        </div>
        <span class="error-message-phone"></span>
      </div>
      <div class="clearfix"></div>
    </div>

    <div class="form-group form-custom input-inline width-inline">
      <div class="col-xs-12">
        <div class="input-group cv-candidate">
          <span class="input-group-addon apply-un input-cv">
            <i class="fa fa-file-pdf-o" aria-hidden="true"></i>
          </span>
          <div class="form-control input-custom input-lg input-cv height_100" >
            <% if @candidate.cv.present? %>
              <a href="<%= @candidate.cv.url %>" data-fancybox
                class="thumbnail-cv p-10 timeline-header">
                <i class="fa fa-eye"></i><b><%= t "employers.view" %></b>
              </a>
              <label id="cv_candidate"><%= @candidate.cv_identifier %></label>
            <% end %>
            <%= f.file_field :cv, id: "file_cv", value:  @candidate.cv, accept: Settings.send_cv.type %>
          </div>
        </div>
        <span class="error-message-cv"></span>
      </div>
      <div class="clearfix"></div>
    </div>
    <div class="form-group form-custom">
      <div class="col-xs-12 pt-15">
        <%= f.submit t(".save"), class: "btn btn-info btn-md" %>
      </div>
    </div>
  </div>
<% end %>
