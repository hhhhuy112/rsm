<%= stylesheet_link_tag "employer/hidepaginate" %>
<div class="block full">
  <div class="block-title">
    <h2><strong><%= t ".all_candidates" %></strong></h2>
    <div class="block-options pull-right">
      <%= link_to new_employers_company_candidate_path(@company), remote: true,
        class: "btn btn-sm btn-alt btn-default" do %>
        <i class="fa fa-plus"></i>
      <% end %>
    </div>
  </div>
  <div class="table-responsive">
    <div id="example-datatable_wrapper" class="dataTables_wrapper form-inline no-footer">
      <div class="row">
        <div class="col-md-6">
          <div class="w-100">
            <%= render "candidates_search" %>
          </div>
        </div>
      </div>
      <div id="table-candidates">
        <%= render "table_candidates" %>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="add-candidate" role="dialog"></div>
<% if @candidates.present? %>
  <div class="modal fade" id="edit-candidate" role="dialog"></div>
<% end %>
