<li class="media abc">
  <a href="page_ready_user_profile.html" class="pull-left">
    <%= image_tag email_sent.user_picture.url, class: "sender-avatar img-circle" %>
  </a>
  <div class="media-body">
    <span class="text-muted pull-right">
      <small><em>
        <%= t "employers.history.sent" %>
        <%= time_ago_in_words(email_sent.created_at) %>
        <%= t "employers.history.ago" %>
      </em></small>
    </span>
    <a href="javascript:void(0)"><strong><%= email_sent.title %></strong></a>
    <p><%= email_sent.content.html_safe %></p>
  </div>
</li>
<script type="text/javascript">
  $('.abc').readmore({
    speed: 75,
    moreLink: '<a href="#" class="btn btn-info">Read more</a>',
    lessLink: '<a href="#" class="btn btn-info">Read less</a>'
  });
</script>