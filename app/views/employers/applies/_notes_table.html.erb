<tr class="background-white border-bottom-custom" id="note-<%= note.id %>">
  <td class="border-bottom-custom chil-margin-0">
    <small class="text-muted"><%= t ".note_by" %>:</small> <%= note.user_name %>
    <div class="btn-group pull-right">
      <%= link_to "javascript:", class: "btn btn-xs btn-default margin-top-minus-2", id: "read-more",
        data: {toggle: "collapse", target: "#content-#{note.id}"} do %>
        <i class="fa fa-eye"></i>
      <% end %>
      <% if can? :update, note %>
        <%= link_to edit_employers_apply_note_path(@apply, id: note.id), remote: true, class: "btn btn-warning btn-xs margin-top-minus-2" do %>
          <i class="fa fa-pencil"></i>
        <% end %>

        <%= link_to employers_apply_note_path(@apply, id: note.id), method: :delete, remote: true,
          class: "btn btn-danger btn-xs margin-top-minus-2", data: {confirm: t(".sure")} do %>
          <i class="fa fa-trash"></i>
        <% end %>
      <% end %>
    </div>
    <div class="collapse break" id="content-<%= note.id %>">
      <%= raw note.content %>
    </div>
  </td>
</tr>
