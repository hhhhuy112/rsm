<div id="no_jobs">
  <button type="button" class="btn btn-info btn-lg none-button" data-toggle="modal" data-target="#myModal">
    <%= t "jobs.apply.click" %>
  </button>
  <div class="modal fade" id="myModal_<%= apply.id %>" role="dialog">
    <div id = "appointment_apply_<%= apply.id %>" class="modal-dialog">
      <%= render partial: "employers/applies/form", locals:{apply: apply, members: @members, template_members: @template_members, template_users:  @template_users} %>
    </div>
  </div>
</div>
