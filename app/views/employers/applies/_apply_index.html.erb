<tr role="row" class="apply_status-<%= apply_status.id %>">
  <td class="text-center"><%= apply_status_counter + 1 %></td>
  <td class="text-center"><%= apply_status.apply.information[:name] %></td>
  <td class="text-center"><%= apply_status.apply.job_name %></td>
  <td class="text-center"><%= apply_status.apply.information[:email] %></td>
  <td class="text-center"><%= apply_status.apply.information[:phone] %></td>
  <td class="text-center">
    <%= show_step_apply apply_status.step %>
  </td>
  <td class="text-center">
    <%= show_status_apply apply_status.status_step %>
  </td>
  <td class="text-center"><%= l apply_status.apply_created_at.to_date, format: :long %></td>
  <td class="text-center">
    <%= get_update_date apply_status.apply_id, @activities %>
  </td>
  <td class="text-center">
    <%= link_to employers_job_apply_path(apply_status.job, id: apply_status.apply_id), class: "btn btn-default btn-xs", title: "view" do %>
      <i class="fa fa-eye"></i>
    <% end %>
  </td>
</tr>
