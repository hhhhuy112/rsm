<div class="block">
  <div class="block-title clearfix">
    <div class="block-options pull-right">
      <%= link_to new_employers_apply_note_path(@apply), remote: true,
        class: "btn btn-sm btn-alt btn-default" do %>
        <i class="fa fa-plus"></i>
      <% end %>
    </div>
    <h2><i class="fa fa-sticky-note-o"></i> <strong><%= t "employers.applies.show.notes" %></strong></h2>
  </div>

  <div class="col-md-12">
    <div class="row">
      <table class="table table-striped table-vcenter">
        <tbody id="notes-table">
          <% if @notes.present? %>
            <%= render partial: "employers/applies/notes_table", collection: @notes, as: :note %>
          <% else %>
            <p class="text-center text-danger">
              <i class="fa fa-times"></i> <%= t ".haven't_notes" %>
            </p>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
