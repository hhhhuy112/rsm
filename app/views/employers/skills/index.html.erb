<div class="block full">
  <div class="block-title">
    <h2><strong><%= t ".management" %></strong></h2>
    <div class="block-options pull-right">
      <%= link_to new_employers_skill_path, remote: true, title: t(".add"),
        class: "btn btn-alt btn-sm btn-default" do %>
        <i class="fa fa-plus" aria-hidden="true"></i>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="tab-content">
        <div class="block full">
          <div class="row">
            <table class="table table-striped table-vcenter">
              <thead>
                <tr>
                  <th class="text-center"><%= t ".stt" %></th>
                  <th class="text-center"><%= t ".name" %></th>
                  <th class="text-center"><%= t ".action" %></th>
                </tr>
              </thead>
              <tbody id="skills">
                <%= render @skills || t(".empty_skill") %>
              </tbody>
            </table>
          </div>
          <% if @skills.present? %>
            <div class="row">
              <center>
                <div id="paginate">
                  <%= paginate @skills, remote: true %>
                </div>
              </center>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="modal fade" id="manage-skill" role="dialog">
    <div class="modal-dialog job-modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title"><%= t ".skill" %></h4>
        </div>
        <div class="modal-body" id="skill-boby">
        </div>
      </div>
    </div>
  </div>
</div>
