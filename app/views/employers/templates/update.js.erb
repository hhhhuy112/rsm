<% if @template.errors.any? %>
  $('#templates-boby').html('<%= j render "form" %>');
<% else %>
  $('#body_template_<%= @template.id %>').remove();
  $('#interview-load').html('<%= j render partial: "employers/templates/interview", collection: @interviewers, as: :interviewer %>');
  $('#load_user').html('<%= j render partial: "employers/templates/candidate", collection: @candidates, as: :candidate %>');
  $('#benefit-list').html('<%= j render partial: "employers/templates/benefit",
    collection: @benefits, as: :benefit %>');
  $('#manage-template').modal('hide');
  alertify.success('<%= @message %>');
<% end %>
