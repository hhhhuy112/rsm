  $('#show-view').html('<%= t "employers.templates.show.template_error" %>');
<% else %>
  CKEDITOR.instances['content-template-user-<%= params[:step_id] %>'].setData("<%= j show_exampleview_user @template, @information, @company %>");
  $('.title-<%= params[:step_id] %>').val('<%= @template.title %>');
<% end %>
