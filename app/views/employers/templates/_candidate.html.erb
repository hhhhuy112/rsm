<div class="modal fade" id="body_template_<%= candidate.id %>" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><%= t ".body" %></h4>
      </div>
      <div class="modal-body">
        <%= candidate.template_body.html_safe %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"><%= t ".close" %></button>
      </div>
    </div>
  </div>
</div>
<tr class="employer-template-<%= candidate.id %>">
  <td class="text-center"><%= count_page candidate_counter,@page %></td>
  <td class="text-center"><%= candidate.name %></td>
  <td class="text-center"><%= candidate.title %></td>
  <td class="text-center">
    <div class="btn-group btn-group-xs">
      <button type="button" class = "show-inter btn btn-default btn-xs" value="<%= candidate.id %>">
        <i class="fa fa-eye" aria-hidden="true"></i>
      </button>
      <%= link_to edit_employers_template_path(candidate), remote: true,
        class: "btn btn-warning btn-xs", data: {toggle: "tooltip"} do %>
        <i class="fa fa-pencil" aria-hidden="true"></i>
      <% end %>
      <%= link_to employers_template_path(candidate), method: :delete, remote: true,
        class: "btn btn-danger btn-xs", data: {confirm: (t ".sure")} do %>
        <i class="fa fa-trash-o" aria-hidden="true"></i>
      <% end %>
    </div>
  </td>
</tr>
