<div class="modal-dialog modal-md">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title"><strong><%= t ".add_apply" %></strong></h4>
    </div>

    <div class="modal-body">
      <%= simple_form_for [:employers, :apply, @note], methos: :patch, remote: true do |f| %>
        <%= f.hidden_field :user_id %>
        <%= f.hidden_field :apply_id %>
        <div class="row">
          <div class="col-md-12">
            <%= f.input :content, as: :ckeditor %>
          </div>
        </div>

        <div class="row">
          <center>
            <%= f.button :submit, class: "btn btn-md btn-info" %>
          </center>
        </div>
      <% end %>
    </div>
  </div>
</div>
