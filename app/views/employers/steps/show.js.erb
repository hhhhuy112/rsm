$('#apply-handling-content').html('');
<% if @status_step.present? %>
  $('#step-history').html('<%= j render partial: "employers/applies/step_history", locals: {data_step: @data_step, status_step: @status_step, apply_status: @data_step[:apply_status_lastest], apply: @apply, current_apply_status: @current_apply_status} %>');
<% else %>
  $('#step-history').html('');
<% end %>
$('#area-form-status').html('<%= j render partial: "employers/applies/form_status", locals: {status_step_scheduled_ids: @status_step_scheduled_ids, apply: @apply, current_step: @step, current_status_steps: @status_steps, is_prev_step: @data_step[:is_prev_step], step_main: @step, current_apply_status: @current_apply_status} %>');
$('.loading').fadeOut('slow');
