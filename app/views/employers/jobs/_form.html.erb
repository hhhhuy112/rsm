<%= stylesheet_link_tag "employer/jquery-ui" %>
<%= stylesheet_link_tag "survey" %>
<%= simple_form_for [:employers, @job], remote: true, html: {id: "form-job"} do |f| %>
  <div class="job-form">
    <%= f.hidden_field :company_id %>
    <div class="col-md-12">
      <%= f.input :name, label: t(".job_name"), input_html: {class: "job-create-name"} %>
    </div>

    <div class="col-md-12">
      <%= f.input :description, label: t(".description"), as: :ckeditor %>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="col-md-5">
          <%= f.input :min_salary %>
        </div>
        <div class="col-md-5">
          <%= f.input :max_salary %>
        </div>
        <div class="col-md-2">
          <label class="control-label">
            <abbr title="required">*</abbr> <%= t ".currency" %>
          </label>
          <%= f.input :currency_id, as: :select, collection: @currencies.map{|currency| [currency.unit, currency.id]},
            label: false %>
          <%= f.full_error :currency, class: "m-top-10-minus" %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <label class="custom-checkbox m-l-15">
          <%= check_box_tag :expire_on, nil, @job.end_time.present? %>
          <span><%= t ".expires_on" %></span>
        </label>
        <div class="display-job-end-time <%= @job.end_time.present? ? '' : 'display-none' %>">
          <%= f.input :end_time, as: :string, label: false, input_html: {class: "datepick", id: "end-s"} %>
        </div>
      </div>
    </div>

    <div class="col-md-12">
      <div class="row">
        <div class="col-md-12">
          <label class="control-label">
            <abbr title="required">*</abbr>
            <%= t ".benefit" %>
          </label>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <%= select_tag :template_benefits, options_from_collection_for_select(
            @template_benefits, :id, :title), class: "form-control",
            include_blank: t(".select_template_benefits") %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12 reward_benefits">
          <%= f.fields_for :reward_benefits do |reward| %>
            <%= reward.input :content, as: :ckeditor, label: false, input_html: {id: "content-benefits"} %>
          <% end %>
          <span class="help-block m-top-10-minus"><%= f.error :reward_benefits %></span>
        </div>
      </div>
    </div>

    <div class="col-md-12">
      <%= f.input :target, label: t(".target"), input_html: {type: "number"} %>
    </div>

    <div class="col-md-12">
      <%= f.input :language, label: t(".foreign_language") %>
    </div>

    <div class="col-md-12">
      <%= f.input :position, label: t(".position") %>
    </div>

    <div class="col-md-12">
      <%= f.input :position_types, as: :select, label: t(".position_types"),
        collection: get_position_types %>
    </div>

    <div class="col-md-12">
      <%= f.input :level, label: t(".level") %>
    </div>

    <div class="col-md-12">
      <div class="row">
        <div class="col-md-12">
          <label class="control-label">
            <%= t ".skill" %>
          </label>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <%= select_tag :template_skills, options_from_collection_for_select(
            @template_skills, :id, :title), class: "form-control",
            include_blank: t(".select_template_skills") %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <%= f.input :skill, as: :ckeditor, label: false %>
        </div>
      </div>
    </div>

    <div class="col-md-12">
      <%= f.input :content, label: t(".requirement"), as: :ckeditor,
        input_html: {class: "job-create-content"} %>
    </div>

    <div class="col-md-12">
      <label class="control-label" for="job_branch_id">
        <abbr title="required">*</abbr> <%= t ".work_place" %>
      </label>
      <%= f.input :branch_id, label: false do %>
        <%= f.select :branch_id, @company.branches.map{ |branch| ["#{branch.street} #{branch.ward},
          #{branch.district}, #{branch.province}, #{branch.country}", branch.id] },
          {include_blank: t(".please_selected")}, class: "form-control" %>
      <% end %>
    </div>

    <div class="col-md-12">
      <%= f.input :category_id do %>
        <%= f.select :category_id, @company.categories.map{|r| [r.name, r.id]},
          {include_blank: t(".please_selected")}, class: "form-control" %>
      <% end %>
    </div>

    <div class="col-md-12">
      <%= render partial: "add_survey", locals: {f: f} %>
      <%= f.full_error :survey_type  %>
    </div>
  </div>

  <div id="preview" class="display-none">
    <%= render "preview_job" %>
  </div>

 <div class="row">
    <div class="col-md-12">
      <center>
        <%= f.button :submit, label: t("jobs.form.save_job"),
          class: "btn btn-info btn-md m-top-20" %>
        <%= link_to t(".preview"), "javascript:void(0)", id: "btn-preview",
          class: "btn btn-info btn-md m-top-20", disabled: "disabled" %>

        <%= link_to t(".back"), "javascript:void(0)", id: "btn-back",
          class: "btn btn-info btn-md w-90 m-top-20 display-none" %>
      </center>
    </div>
  </div>
<% end %>
<%= javascript_include_tag "survey" %>
<%= javascript_include_tag "employers/preview" %>
<%= javascript_include_tag "format_datepicker" %>
