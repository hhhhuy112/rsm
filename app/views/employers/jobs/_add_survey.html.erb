<div class="block margin-bottom-0">
  <div class="block-title h-40">
    <label class="control-label m-10">
      <i class="fa fa-newspaper-o"></i>
      <strong><%= t ".add_survey" %></strong>
    </label>
    <div class="onoffswitch">
      <input type="checkbox" name="onoffswitch"
        class="onoffswitch-checkbox" id="survey-checkbox">
      <label class="onoffswitch-label" for="survey-checkbox">
        <span class="onoffswitch-inner"></span>
        <span class="onoffswitch-switch"></span>
      </label>
    </div>
  </div>
  <div class="has-survey display-none m-top-10">
    <div class="row">
      <div class="col-md-12">
        <label class="control-label">
          <abbr title="required">*</abbr>
          <%= t ".survey_type" %>
        </label>
        <div class="funkyradio form-group m-i-top-20">
          <% Job.survey_types.drop(1).each do |key, value| %>
            <%= radio_survey_type key, key, f %>
          <% end %>
        </div>
      </div>
    </div>

    <label class="control-label">
      <abbr title="required">*</abbr>
      <%= t ".choose_question" %>
    </label>

    <div class="row h-0">
      <%= render "new_question", f: f %>
    </div>

    <div class="row">
      <div class="col-md-12">
        <%= render "search_question", f: f %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="tagsinput" id="example-tags_tagsinput"></div>
      </div>
      <%= hidden_field_tag :choosen_ids, nil, id: "choosen-ids" %>
      <%= hidden_field_tag :name_question_choosen, nil,
        id: "name-question-choosen" %>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="table-responsive">
          <div class="scrollbar block full tbl-user-member" id="style-2">
            <table class="table table-striped table-vcenter">
              <thead class="header-scroll">
                <tr role="row">
                  <th class="text-center"></th>
                  <th class="text-center"><%= t ".questions" %></th>
                </tr>
              </thead>
              <tbody id="table-question">
                <%= render "table_question" %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="no-survey p-bottom-20">
    <small><i><strong><%= t ".add_survey" %></strong></i></small>
  </div>
</div>
<div id="nested-question-id">
</div>
<%= javascript_include_tag "employers/search_question" %>
