<div class="row text-center">
  <div class="col-sm-6 col-lg-3">
    <%= link_to new_employers_job_path, class: "widget widget-hover-effect2",
      remote: true do %>
      <div class="widget-extra themed-background-success">
        <h4 class="widget-content-light">
          <strong><%= t ".add_job" %></strong>&nbsp;&nbsp;<%= t ".job" %>
        </h4>
      </div>
      <div class="widget-extra-full">
        <span class="h2 text-success animation-expandOpen">
          <i class="fa fa-plus"></i>
        </span>
      </div>
    <% end %>
  </div>
  <div class="col-sm-6 col-lg-3">
    <%= link_to "javascript:void(0)", class: "widget widget-hover-effect2",
      remote: true do %>
      <div class="widget-extra themed-background-warning">
        <h4 class="widget-content-light">
          <strong><%= t ".urgent" %></strong>&nbsp;&nbsp;<%= t ".jobs" %>
        </h4>
      </div>
      <div class="widget-extra-full">
        <span class="h2 text-danger animation-expandOpen">
          <%= Job.count_urgent_of_company @company %>
        </span>
      </div>
    <% end %>
  </div>
  <div class="col-sm-6 col-lg-3">
    <%= link_to "javascript:void(0)", class: "widget widget-hover-effect2",
      remote: true do %>
      <div class="widget-extra themed-background-danger">
        <h4 class="widget-content-light">
          <strong><%= t ".expired" %></strong>&nbsp;&nbsp;<%= t ".jobs" %>
        </h4>
      </div>
      <div class="widget-extra-full">
        <span class="h2 themed-color-dark animation-expandOpen">
          <%= Job.count_expired_of_company @company %>
        </span>
      </div>
    <% end %>
  </div>
  <div class="col-sm-6 col-lg-3">
    <%= link_to "javascript:void(0)", class: "widget widget-hover-effect2",
      remote: true do %>
      <div class="widget-extra themed-background-dark">
        <h4 class="widget-content-light">
          <strong><%= t ".all" %></strong>&nbsp;&nbsp;<%= t ".jobs" %>
        </h4>
      </div>
      <div class="widget-extra-full">
        <span class="h2 themed-color-dark animation-expandOpen">
          <%= Job.count_of_company @company %>
        </span>
      </div>
    <% end %>
  </div>
</div>
