<%= form_for [:employers, apply], remote: true do |f| %>
  <%= f.select :status, Apply.statuses.map{|key, value| [t("employers.applies.statuses.#{key}"), key]},
    {}, class: "apply_select form-control" %>
<%= f.hidden_field :id, value: apply.id %>
<%= f.submit "save", class: "btn-submit-edit-applies" %>
<% end %>
