<% if @achievement.errors.any? %>
  $('#area_form_achievement_<%= @achievement.id %>').html('<%= j render "achievements/form" %>');
<% else %>
  $('#area_form_achievement_<%= @achievement.id %>').remove();
  $('#info_achievement_<%= @achievement.id %>').replaceWith('<%= j render @achievement %>').show();
  alertify.success('<%= @message %>');
<% end %>
