<% if @achievement.errors.any? %>
  $('#btn-add-achievement').hide();
  $('#area_form_achievement').html('<%= j render("achievements/form") %>');
<% else %>
  $('.placeholder-achievement').hide();
  $('#area_form_achievement').empty();
  $('#btn-add-achievements').show();
  $('#form-achievements').append('<%= j render @achievement %>');
  alertify.success('<%= @message %>');
<% end %>
