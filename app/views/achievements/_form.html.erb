<%= javascript_include_tag "format_datepicker", "data-turbolinks-track": "reload" %>
<%= simple_form_for @achievement, html: {class: "new-section"}, remote: true do |f| %>
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :name, class: "profile_label" do %>
          <strong class="text-red">*</strong><%= t ".name" %>
        <% end %>
        <%= f.text_field :name, autofocus: true, class: "form-control edit-control",
        placeholder: t(".name") %>
      </div>
      <span class="error-message">
        <%= f.error :name %>
      </span>
    </div>
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :majors, class: "profile_label" do %>
          <strong class="text-red">*</strong><%= t ".majors" %>
        <% end %>
        <%= f.text_field :majors, autofocus: true, class: "form-control edit-control",
        placeholder: t(".majors") %>
      </div>
      <span class="error-message">
          <%= f.error :majors %>
        </span>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :organization, class: "profile_label" do %>
          <strong class="text-red">*</strong><%= t ".organization" %>
        <% end %>
        <%= f.text_field :organization, autofocus: true, class: "form-control edit-control",
        placeholder: t(".organization") %>
      </div>
      <span class="error-message">
          <%= f.error :organization %>
        </span>
    </div>
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :received_time, class: "profile_label" do %>
          <strong class="text-red">*</strong><%= t ".received_time" %>
        <% end %>
        <% if @achievement.received_time.present? %>
        <%= f.text_field :received_time, data: {provide: "datepicker"},
        class: "datepick form-control edit-control", value: @achievement.received_time.strftime(t "date_format") %>
        <% else %>
        <%= f.text_field :received_time, data: {provide: "datepicker"}, class: "datepick form-control edit-control" %>
        <% end %>
      </div>
      <span class="error-message">
          <%= f.error :received_time %>
        </span>
    </div>
  </div>
  <div class="form-group push-top-md edit-field">
    <div class="col-sm-6" >(<strong class="text-red">*</strong>)<%= t ".required" %></div>
    <div class="row">
      <div class="col-sm-6 text-right">
        <button id="<%= define_cancel_achievement_id @achievement %>" type="button"
          class="btn-cancel btn btn-default" value="<%= @achievement.id %>">
          <%= t ".cancle" %>
        </button>
        <%= f.submit t(".save"), class: "btn-save btn btn-primary" do  %>
        <i class="fa fa-plus"></i>
        <% end %>
        <span class="achievement-received_time-invalid error-message"></span>
      </div>
    </div>
  </div>
<% end %>
