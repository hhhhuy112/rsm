<%= stylesheet_link_tag "employers/notification" %>
<header class="navbar navbar-default">
  <ul class="nav navbar-nav-custom">
    <li>
      <%= link_to "javascript:void(0)", onclick: "App.sidebar('toggle-sidebar');" do %>
        <i class="fa fa-bars fa-fw"></i>
      <% end %>
    </li>
  </ul>

  <%= form_tag employers_applies_path,
      method: :GET, id: "form_search_email", class: "navbar-form-custom" do %>
    <%= text_field_tag :email_of_info_or_code, params[:email_of_info_or_code],
      class: "form-control", id: "input_button_search", placeholder: t(".search") %>
  <% end %>

  <ul class="nav navbar-nav-custom navbar-right">
    <%= render "shared/notify_email_sent" %>
    <%= render "shared/notification" %>
    <li class="dropdown">
      <%= link_to "javascript:void(0)", class: "dropdown-toggle", data: { toggle: "dropdown"} do %>
        <%= image_tag current_user.picture.url %>
        <i class="fa fa-angle-down"></i>
      <% end %>
      <ul class="dropdown-menu dropdown-custom dropdown-menu-right">
        <li class="dropdown-header text-center"><%= t ".account" %></li>
        <li>
          <%= link_to user_url current_user do %>
            <i class="fa fa-user fa-fw pull-right"></i>
            <%= t ".profile" %>
          <% end %>
        </li>
        <li class="divider"></li>
        <li>
          <%= link_to destroy_user_session_path, method: :delete, class: "col-do" do %>
            <i class="fa fa-ban fa-fw pull-right"></i>
            <%= t ".logout" %>
          <% end %>
        </li>
      </ul>
    </li>
  </ul>
</header>
<div class="modal fade" id="notifications-index" role="dialog"
  tabindex="-1" aria-hidden="true">
</div>
<div class="modal fade" id="notify-mail-index" role="dialog"
  tabindex="-1" aria-hidden="true">
</div>
