<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= favicon_link_tag "frc.png" %>
    <%= csrf_meta_tags %>
    <%= Gon::Base.render_data %>
    <%= stylesheet_link_tag "employers/employer", media: "all", "data-turbolinks-track": "reload" %>
    <%= javascript_include_tag "employer", "data-turbolinks-track": "reload" %>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script type="text/javascript">
      I18n.defaultLocale = "<%= I18n.default_locale %>";
      I18n.locale = "<%= I18n.locale %>";
    </script>
  </head>

  <body>
    <div class="loading"></div>
    <div id="page-wrapper">
      <div class="preloader themed-background">
        <h1 class="push-top-bottom text-light text-center"><strong><%= t ".employer" %></h1>
      </div>
      <div id="page-container" class="sidebar-partial sidebar-visible-lg sidebar-no-animations page-anta">
        <%= render "layouts/employers/sidebar_employer" %>
        <div id="main-container">
          <%= render "layouts/employers/header_employer" %>
          <div id="page-content">
            <div class="row" id="message-flash">
              <% flash.each do |message_type, message| %>
                <div class="alert alert-<%= message_type %>"><%= message %></div>
              <% end %>
            </div>
            <div id="boby-page">
              <%= yield %>
            </div>
            <%= image_tag "loading.gif", id: "img-loading", class: "img-load" %>
          </div>
          <%= render "layouts/employers/footer_employer" %>
        </div>
      </div>
    </div>
    <a href="#" id="to-top"><i class="fa fa-angle-double-up"></i></a>
  </body>
</html>
