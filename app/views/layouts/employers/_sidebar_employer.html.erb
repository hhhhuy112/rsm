        <li class="title-header">
            <span class="title-sidebar"><%= t ".personal-setting" %></span>
        </li>

        <li>
          <%= link_to "javascript:void(0)", class: "connect-google" do %>
            <i class="fa fa-google" aria-hidden="true"></i>
            <span class="sidebar-nav-mini-hide lion font-style-normal"><%= t ".connect_gmail" %></span>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>
<%= javascript_include_tag "employers/sidebar_employer" %>
