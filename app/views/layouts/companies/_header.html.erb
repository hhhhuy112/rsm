<%= stylesheet_link_tag "employers/notification" %>
<header id="header">
  <div class="wrapper">
    <div class="logo">
      <a href="#" class="custom-logo-link" rel="home" itemprop="url">
        <%= image_tag @company.logo.present? ? @company.logo.url : "default_logo.png" %>
      </a>
    </div>
    <div class="header-right">
      <section id="icl_lang_sel_widget-2" class="widget_icl_lang_sel_widget">
        <span class="menu-icon menu-open nav-menu-custom">
          <i class="fa fa-bars"></i></span>
        <span class="menu-icon menu-close nav-menu-custom">
          <i class="fa fa-bars"></i></span>
      </section>
      <section id="icl_lang_sel_widget-2" class="widget widget_icl_lang_sel_widget">
        <div id="lang_sel">
          <%= render "shared/language_local" %>
        </div>
      </section>
      <% if user_signed_in? %>
        <section class="widget widget_icl_lang_sel_widget user-ic">
          <a href="javascript:void(0)" class="site-menu-toggle visible-xs visible-sm">
          </a>
          <ul class="site-nav">
            <%= render "shared/notification" %>
            <li class = "dropdown">
              <%= link_to "javascript:void(0)", class: "setting_user menu-item menu-item-type-custom menu-item-object-custom menu-item-120" do %>
              <%= image_tag current_user.picture.url, class: "avatar_user" %>
              <i class="fa fa-angle-down"></i>
              <% end %>
              <ul>
                <li class="arrow-up"><span class="border-arrow"></span><span class="arrow"></span></li>
                <% if current_user.employer? %>
                  <li>
                    <%= link_to employers_dashboards_url subdomain: current_user.company.subdomain do %>
                      <%= t "employer" %>
                      <i class="fa fa-dashcube fa-fw pull-right"></i>
                    <% end %>
                  </li>
                <% end %>
                <li>
                  <%= link_to user_url current_user do %>
                  <%= t ".profile" %>
                  <i class="fa fa-user fa-fw pull-right"></i>
                  <% end %>
                </li>
                <li>
                  <%= link_to edit_user_registration_url do %>
                  <%= t ".change" %>
                  <i class="fa fa-pencil-square-o pull-right"></i>
                  <% end %>
                </li>
                <li>
                  <%= link_to bookmark_likes_url do %>
                  <%= t ".my_job" %>
                  <i class="fa fa-briefcase fa-fw pull-right"></i>
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_user_session_url, method: :delete do %>
                  <i class="fa fa-ban fa-fw pull-right"></i>
                  <%= t(".logout") %>
                  <% end %>
                </li>
              </ul>
            </li>
          </ul>
        </section>
      <% end %>
      <div class="menu">
        <ul id="menu-primary-menu-vn" class="">
          <li id="menu-item-118" class="inactive menu-item menu-item-type-custom menu-item-object-custom menu-item-118">
            <a href="#"><%= t ".service" %></a>
          </li>
          <li id="menu-item-129" class="menu-item menu-item-type-custom menu-item-object-custom menu-item-129">
            <%= link_to jobs_path do %>
              <%= t ".challange_job" %>
            <% end %>
          </li>
          <li id="menu-item-117" class="inactive menu-item menu-item-type-custom menu-item-object-custom menu-item-117">
            <a href="#"><%= t ".cultural" %></a>
          </li>
          <li id="menu-item-116" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-116">
            <a href="#"><%= t ".contact" %></a>
          </li>
          <% if !user_signed_in? %>
            <li id="menu-item-114" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-114">
              <%= link_to "javascript:void(0)", class: "btn-login" do %>
                <%= t ".login" %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</header>
<div class="modal fade" id="notifications-index" role="dialog"
  tabindex="-1" aria-hidden="true">
</div>
