<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= favicon_link_tag "frc.png" %>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag "jobs/job", media: "all", "data-turbolinks-track": "reload" %>
    <%= javascript_include_tag "job", "data-turbolinks-track": "reload" %>
  </head>
  <body class="home page">
    <div id="page-container">
      <div id="content-body-custom">
        <span class="opacity"></span>
        <%= render "layouts/header" %>
        <section class="site-content">
          <%= yield %>
        </section>

        <%= render "layouts/companies/login" %>
      </div>
      <%= render "layouts/footer" %>
    </div>
    <%= image_tag "logo.gif", id: "img-loading", class: "img-load" %>
  </body>
</html>
