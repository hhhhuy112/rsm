<div class="create-job-modal" id ="apply_button">
  <button type="button" class="btn btn-primary btn-lg post-job"
    data-toggle="modal" data-target="#JobModal">
    <%= t ".applynow" %>
  </button>
  <div class="modal fade" id="JobModal" role="dialog">
    <div class="modal-dialog job-modal-dialog modal-lg">
      <div class="modal-content opacity-apply custom-width">
        <div class="modal-header login-titles">
          <button type="button" class="close title-modal" data-dismiss="modal">x</button>
          <div class="login-title text-center">
            <h1>
              <i class="gi gi-flash"></i>
              <strong><%= t ".app" %>&nbsp; <%= t ".framgia" %></strong><br>
              <small>
                <strong class="title-modal">
                  <%= @job.name %>
                  (<%= t ".slary" %>
                  <%= @job.min_salary.round.to_s + Settings.currency.dollar %> -
                  <%= t ".working" %><%= @company.address %>)
                </strong>
              </small>
            </h1>
          </div>
        </div>
        <div class="modal-body  modal-create-form" id="job-create-form">
          <div class="bootstrap snippet">
            <div class="panel-body inf-content">
              <div class= "row">
                <div id="undefind-content">
                  <%= render "applies/undefind_content",locals: {apply: @apply} %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
