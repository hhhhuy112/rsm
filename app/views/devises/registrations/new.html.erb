<% provide :title, t(".register") %>
<%= image_tag "recruit.framgia.jpg", class: "full-bg animation-pulseSlow" %>
<div id="login-container" class="animation-fadeIn">
  <div class="login-title text-center">
    <h1>
      <i class="gi gi-flash"></i>
      <strong><%= t ".app" %></strong><br>
      <small><%= t ".please" %><strong><%= t ".login" %></strong>
        <%= t ".or" %><strong><%= t ".register" %></strong>
      </small>
    </h1>
  </div>
  <div class="block push-bit">
    <%= form_for(resource, as: resource_name, html: {class: "form-horizontal form-bordered form-control-borderless",
      id: "form-login"}, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <div class="col-xs-12">
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-address-book" aria-hidden="true"></i></span>
            <%= f.text_field :name, autofocus: true, class: "form-control input-custom input-lg",
              placeholder: t(".name") %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-12">
          <div class="input-group">
            <span class="input-group-addon"><i class="gi gi-envelope"></i></span>
            <%= f.email_field :email, autofocus: true, class: "form-control input-custom input-lg",
              placeholder: t(".email") %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-12">
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-phone" aria-hidden="true"></i></span>
            <%= f.text_field :phone, autofocus: true, class: "form-control input-custom input-lg",
              placeholder: t(".phone") %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-12">
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-address-card-o" aria-hidden="true"></i></span>
            <%= f.text_field :address, autofocus: true, class: "form-control input-custom input-lg",
              placeholder: t(".address") %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-12">
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-birthday-cake" aria-hidden="true"></i></span>
            <%= f.text_field :birthday, class: " datepick form-control input-custom input-lg" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-12">
          <div class="input-group">
            <span class="input-group-addon"><i class="gi gi-asterisk"></i></span>
            <%= f.password_field :password,class: "form-control input-custom input-lg",
              placeholder: t(".password") %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-12">
          <div class="input-group">
            <span class="input-group-addon"><i class="gi gi-asterisk"></i></span>
            <%= f.password_field :password_confirmation,class: "form-control input-custom input-lg",
              placeholder: t(".password_confirm") %>
          </div>
        </div>
      </div>
      <div class="form-group form-actions">
        <div class="col-xs-6">
          <a href="#modal-terms" data-toggle="modal" class="register-terms"><%= t "terms" %></a>
          <label class="switch switch-primary" data-toggle="tooltip" title="Agree to the terms">
            <input type="checkbox" id="register-terms" name="register-terms">
            <span></span>
          </label>
        </div>
        <div class="col-xs-6 text-right">
          <%= f.submit t(".re_account"), class: "btn btn-sm btn-success" do  %>
            <i class="fa fa-plus">
          <% end %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-12 text-center">
          <small><%= t ".account" %></small><%= link_to t(".login"), new_user_session_path %>
        </div>
      </div>
    <% end %>
  </div>
</div>
