<% provide(:title, t("edit")) %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="animation-fadeIn sd-cof">
      <div class="login-title text-center">
        <h1>
          <small class="sml-cof">
            <strong><i class="fa fa-key"></i><%= t ".resend" %></strong>
          </small>
        </h1>
      </div>
      <div class="block push-bit">
        <%= simple_form_for(resource, as: resource_name, html: {class: "form-horizontal form-bordered
          form-control-borderless", method: :post},
            url: confirmation_path(resource_name)) do |f| %>
          <div class="form-group form-custom">
            <div class="col-xs-12">
                <%= f.email_field :email, class: "form-control input-custom input-lg",
                  placeholder: t(".email"), autofocus: true %>
              <span class="error-message">
                <%= f.full_error :email %>
              </span>
            </div>
          </div>
          <div class="form-group form-custom form-actions">
            <div class="col-xs-12 text-right">
              <%= f.submit t(".resend"), class: "btn btn-sm btn-success" do  %>
                <i class="fa fa-plus"></i>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
