<% if check_notify notification %>
  <li class="unread">
    <div class="col-md-3 col-sm-3 col-xs-3">
      <div class="notify-img">
        <%= image_tag show_image(notification) , width: Settings.picture_user_width,
          height: Settings.picture_user_height %>
      </div>
    </div>
    <div class="col-md-9 col-sm-9 col-xs-9 pd-l0 notification"
      onclick="window.location='<%= @notice[:link] %>';">
      <p><b><%= @notice[:name] %>:</b> <%= @notice[:content] %>
        <% if notification.user_id %>
          <%= t ".by" %> <b><%= notification.user_name %></b>
        <% end %>
      </p>
      <p class="time"><%= t ".time_ago", time: time_ago_in_words(notification.created_at) %></p>
    </div>
  </li>
<% end %>
