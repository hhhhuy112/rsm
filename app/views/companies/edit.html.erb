<% provide(:title, t("edit_company")) %>
<% provide(:banner, t("banner_edit")) %>
<div class="ibox-content m-t">
  <div id="email-address">
    <div class="panel-body row">
      <div class="col-sm-10">
        <div class="float-e-margins animated fadeInRight">
          <div class="content">
            <h2><span class="circle-wrapper"><i class="fa fa-fw fa-envelope"></i></span>
              <%= t ".account_info" %>
            </h2>
            <div class="alert hide"></div>
            <fieldset>
              <form class="form-horizontal" role="form">
                <div class="form-group">
                  <label class="col-sm-3 control-label"><%= t ".email_address" %></label>
                  <div class="col-sm-9">
                    <p class="form-control-static"><%= current_user.email %></p>
                  </div>
                  </div>
              </form>
            </fieldset>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="ibox-content m-t" id="company">
  <div class="panel-body row">
    <div class="col-sm-10">
      <div class="float-e-margins animated fadeInRight">
          <div class="content">
            <h2>
              <span class="circle-wrapper"><i class="fa fa-building-o"></i></span>
              <%= t ".company_info" %>
            </h2>
            <%= form_for @company, html: {class: "select-remove-width form-horizontal"} do |f| %>
              <div class="form-group">
                <%= f.label :name, t(".company_name"), class: "col-sm-3 control-label required" %>
                <div class="col-sm-9">
                  <%= f.text_field :name, class: "form-control", required: :true %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :address, class: "col-sm-3 control-label required" do %>
                  <%= t ".company_address" %><br>
                  <small><%= t "optional" %></small>
                <% end %>
                <div class="col-sm-9">
                  <%= f.text_field :address, class: "form-control" %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :majors, t(".company_majors"), class: "col-sm-3 control-label required" %>
                <div class="col-sm-9">
                  <%= f.text_field :majors, class: "form-control", required: :true %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :contact_person, class: "col-sm-3 control-label required" do %>
                  <%= t ".contact_name" %><br>
                  <small><%= t "optional" %></small>
                <% end %>
                <div class="col-sm-9">
                  <%= f.text_field :contact_person, class: "form-control" %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :phone, t(".company_phone"), class: "col-sm-3 control-label required" %>
                <div class="col-sm-9">
                  <%= f.text_field :phone, class: "form-control", required: :true %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :company_info, class: "col-sm-3 control-label required" do %>
                  <%= t ".company_profile" %><br>
                  <small><%= t "optional" %></small>
                <% end %>
                <div class="col-sm-9">
                  <%= f.text_area :company_info,cols: 30, rows: 7, class: "form-control" %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :banner, class: "col-sm-3 control-label required" %>
                <div class="col-sm-3">
                  <%= f.file_field :banner, id: "bannerSelect" %>
                </div>
                <%= image_tag @company.banner.url, class: "banner_img_load", id: "banner_img" %>
              </div><br>

              <div class="form-group">
                <%= f.label :logo, class: "col-sm-3 control-label required" %>
                <div class="col-sm-3">
                  <%= f.file_field :logo, id: "logoSelect" %>
                </div>
                <%= image_tag @company.logo.url, class: "logo_img_load", id: "logo_img" %>
              </div>

              <div class="form-group">
                <div class="text-right col-sm-12">
                    <%= f.submit t("save"), class: "btn btn-primary" %>
                </div>
              </div>
            <% end %>
          </div>
      </div>
    </div>
  </div>
</div>

