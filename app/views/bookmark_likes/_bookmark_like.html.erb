<div id= "info_achievement_<%= bookmark_like.id %>">
  <div class="res-table__row row animated">
    <div class="col-md-1 logo text-center">
      <%= image_tag bookmark_like.company.logo.url, size: Settings.bookmark.image, class: "img_company" %>
    </div>
    <div class="col-md-5 job-info">
      <div class="name">
        <b><%= link_to bookmark_like.job.name,
          job_url(bookmark_like.job_id, subdomain: bookmark_like.company.subdomain) %></b>
      </div>
      <div class="text-strong"><%= t ".corp" %><%= bookmark_like.company.name %> ,
        <%= bookmark_like.company.address %></div>
      <div class="text-strong"><%= t ".level" %><%= bookmark_like.job.level %></div>
    </div>
    <div class="col-md-2 applied" >
      <div class="text-light bookmark_like-color">
        <b><%= t ".position" %></b>
        <span class="hidden-md hidden-lg m-r-xs">:</span>
      </div>
      <div class="text-strong"><%= bookmark_like.job.position %></div>
    </div>
    <div class="col-md-2 applied">
      <div class="text-light bookmark_like-color">
       <b><%= t ".subdate" %></b>
        <span class="hidden-md hidden-lg m-r-xs">:</span>
      </div>
      <div class="text-strong"><%= l bookmark_like.created_at, format: :long %></div>
    </div>
    <div class="col-md-2 applied">
      <div class="text-strong">
        <% unless current_user.is_applied? bookmark_like.job_id %>
          <%= link_to job_url(bookmark_like.job_id, subdomain: bookmark_like.company.subdomain),
            class: "btn btn-primary" do  %>
            <%= t ".apply_now" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
