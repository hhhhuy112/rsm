<div id="info_club_<%= club.id %>" class="sortable content-section">
  <div class="profile_top_view">
    <div class="row">
      <div class="col-md-5">
        <h4 class="view-control"><%= club.name %></h4>
      </div>
      <div class="col-md-7">
        <% if can? :modify, club %>
          <span class="form-btn-edit">
            <%= link_to club, method: :delete, data: {confirm: t(".confirm")},
              class: "btn btn-sm btn-danger", remote: true do %>
              <i class="glyphicon glyphicon-trash"></i>
            <% end %>
            <%= link_to edit_club_path(club), class: "btn btn-sm btn-warning", remote: true do %>
              <i class="glyphicon glyphicon-pencil"></i>
            <% end %>
          </span>
        <% end %>
      </div>
    </div>
    <div class="view-field date_profile">
      <span class="view-control" data-control="from-date">
        <%= t ".from" %>
        <%= I18n.l club.start_time, format: :long %>
        <%= t ".to" %>
        <%= show_endtime club %>
      </span>
    </div>
  </div>

  <table class="table table_profile">
    <tr>
      <td class="view-field nowrap">
        <strong class="view-control"><%= t ".position" %></strong>
      </td>
      <td class="profile_content"><%= club.position %></td>
    </tr>
    <tr>
      <td class="view-field nowrap">
        <strong class="view-control"><%= t ".organization" %></strong>
      </td>
      <td class="profile_content"><%= club.content %></td>
    </tr>
  </table>
</div>
